<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.exsun.meizi">

    <application
        android:name=".base.MzApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.welcome.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.activity.HomeActivity"/>
        <activity android:name=".ui.picture.PictureActivity"/>
        <activity
            android:name=".ui.home.activity.LoginActivity"
            android:theme="@style/AppTheme.Back"/>
        <activity
            android:name=".ui.home.activity.RegisterActivity"
            android:theme="@style/AppTheme.Back"/>
        <activity
            android:name=".ui.web.BaseWebActivity"
            android:theme="@style/AppTheme.Back"/>
        <activity
            android:name=".ui.search.GankSearchActivity"
            android:theme="@style/AppTheme.Back"/>
        <activity
            android:name=".ui.dummy.DummyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparent"/>
        <activity
            android:name=".ui.douyu.activity.DyMainActivity"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden"
            />
        <activity
            android:name=".ui.douyu.activity.LiveActivity"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden"/>


        <meta-data
            android:name="AA_DB_NAME"
            android:value="meizhi.db"/>
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1"/>
    </application>

</manifest>